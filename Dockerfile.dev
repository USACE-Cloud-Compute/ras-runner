FROM rockylinux:8


RUN yum -y update &&\ 
    yum -y install git &&\
    yum -y install wget &&\
    yum -y install unzip &&\
    yum -y install gcc &&\
    yum -y install gcc-c++ &&\
    yum -y install make &&\
    yum -y install libcurl-devel.x86_64 &&\
    yum -y install openssl-devel.x86_64 &&\
    mkdir -p /src/ras-runner &&\
    mkdir  /ras

#names specific to artifacts downloaded from cloud-wat-resources on the HEC Nexus. 
ARG NEXUS_RAS_URL=https://www.hec.usace.army.mil/nexus/repository/cloud-wat-resources/ras/HEC-RAS_610_Linux_EngineOnly.zip
ARG RAS_FILE=HEC-RAS_610_Linux_EngineOnly.zip
ARG RAS_BIN_DIR=HEC-RAS_610_Linux_EngineOnly/bin
ARG RAS_LIB_DIR=HEC-RAS_610_Linux_EngineOnly/libs
#download RAS and put the file in the right place. Give them permissions to execute
RUN wget ${NEXUS_RAS_URL} &&\ 
    unzip ${RAS_FILE} &&\
    mv /${RAS_BIN_DIR} /ras/libs &&\
    mv /${RAS_LIB_DIR} /ras/bin &&\
    chmod -R +x /ras/* 


COPY go.mod main.go /src/ras-runner/

#set up Go
RUN wget https://go.dev/dl/go1.21.5.linux-amd64.tar.gz -P / &&\
    tar -xvzf go1.21.5.linux-amd64.tar.gz -C / 
ENV GOROOT=/go
ENV GOPATH=/src/go
ENV PATH=/go/bin:$PATH

#set up HDF
ARG HDF_FILE=hdf5-1.14.3.tar.gz
ARG HDF_NEXUS_URL=https://www.hec.usace.army.mil/nexus/repository/cloud-wat-resources/hdf/hdf5-1.14.3.tar.gz
ENV CGO_LDFLAGS="-L/hdf/lib"
ENV CGO_CFLAGS="-I/hdf/include"
ENV LD_LIBRARY_PATH=/hdf/lib

RUN wget ${HDF_NEXUS_URL} &&\
    mkdir /hdfsrc &&\
    tar -xvzf ${HDF_FILE} --directory /hdfsrc --strip 2 &&\ 
    cd /hdfsrc &&\
    ./configure --prefix=/hdf --enable-shared --enable-ros3-vfd --enable-threadsafe --enable-unsupported &&\
    make &&\
    make install

#download test data. I'd like to move this to the test data folder, but couldn't get the commmand working. 
ARG NEXUS_TEST_DATA="https://www.hec.usace.army.mil/nexus/repository/cloud-wat-resources/test-data/cc-ras-runner/BaldEagleDamBrk.g03.hdf"
RUN wget ${NEXUS_TEST_DATA}


RUN cd /src/ras-runner &&\
    go mod tidy 
    go build





